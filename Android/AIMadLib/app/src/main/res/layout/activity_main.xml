<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the words to create your story!"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/adjective1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adjective 1"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/adjective2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adjective 2"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/adjective3EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adjective 3"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/verb1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Verb 1"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/verb2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Verb 2"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/noun1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Noun 1"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/noun2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Noun 2"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/noun3EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Noun 3"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/generateStoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Story"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/storyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:text="" />

</LinearLayout>
